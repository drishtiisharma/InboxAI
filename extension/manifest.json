{
  "manifest_version": 3,
  "name": "InboxAI",
  "version": "0.1",
  "description": "Voice-powered email summarizer using AI",
  "permissions": [
    "activeTab",
    "microphone"
  ],
  "host_permissions": [
    "https://*.onrender.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
